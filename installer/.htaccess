# SmartERP Installer Protection
# This file secures the installer directory after initial setup

# IMPORTANT: After successful installation, restrict access to this directory
# Uncomment the following lines to prevent unauthorized access:

# <Files "*.php">
#     Order Allow,Deny
#     Deny from all
#     Allow from 127.0.0.1
# </Files>

# Alternative: Allow only specific IPs
# <Files "index.php">
#     Order Allow,Deny
#     Deny from all
#     Allow from 192.168.1.0/24
# </Files>

# Prevent directory listing
Options -Indexes

# Disable execution of scripts by extension
# <FilesMatch "\.(php|phtml|php3|php4|php5|php6|php7|phps|pht|phar)$">
#     Order Deny,Allow
#     Deny from all
# </FilesMatch>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Prevent access to sensitive files
<Files "checker.php">
    Order Allow,Deny
    Allow from all
</Files>

# Cache control
<IfModule mod_expires.c>
    ExpiresActive Off
</IfModule>
